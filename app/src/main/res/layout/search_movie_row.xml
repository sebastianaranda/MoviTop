<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_activity">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/search_movie_row_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/search_movie_row_imageview_poster"
            android:layout_width="48dp"
            android:layout_height="72dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/search_movie_row_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Breaking Bad"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/search_movie_row_cardview"
        app:layout_constraintTop_toTopOf="@id/search_movie_row_cardview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/search_movie_row_textview_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="DRAMA"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/search_movie_row_textview_title"
        app:layout_constraintTop_toBottomOf="@id/search_movie_row_textview_title"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:alpha="0.4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_movie_row_materialbutton_add"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:cornerRadius="3dp"
        android:text="AGREGAR"
        android:textSize="12sp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/search_movie_row_cardview"
        app:layout_constraintBottom_toBottomOf="@id/search_movie_row_cardview"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/search_movie_row_cardview"
        app:layout_constraintLeft_toLeftOf="@id/search_movie_row_textview_title"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#979797"
        android:layout_marginTop="10dp"
        android:alpha="0.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>