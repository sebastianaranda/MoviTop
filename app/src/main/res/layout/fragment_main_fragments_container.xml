<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.MainFragmentsContainer"
    android:background="@color/bg_main_activity">

    <!--  SUBSCRIBED MOVIES  -->
    <TextView
        android:id="@+id/main_fragment_subscribedmovies_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/txt_subscribedmoview_subscribed"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/main_fragment_movies_list_recycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_fragment_subscribedmovies_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_fragment_subscribedmovies_list_title"
        app:reverseLayout="false"
        tools:listitem="@layout/subscribedmovie_row" />

    <View
        android:id="@+id/main_fragment_subscribedmovies_loading_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/main_fragment_subscribedmovies_list_recycler"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_subscribedmovies_list_recycler"
        android:background="@color/bg_main_activity" />

    <ProgressBar
        android:id="@+id/main_fragment_subscribedmovies_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/slate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_fragment_subscribedmovies_list_recycler"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_fragment_subscribedmovies_list_recycler" />



    <!--  MOVIE LIST  -->
    <TextView
        android:id="@+id/main_fragment_movies_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_movie_list_all"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/main_fragment_subscribedmovies_list_recycler"
        app:layout_constraintLeft_toLeftOf="@id/main_fragment_movies_list_recycler"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_fragment_movies_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:reverseLayout="false"
        tools:listitem="@layout/movie_row"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_fragment_movies_list_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>